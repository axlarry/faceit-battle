{
  "name": "Faceit Friend Tracker",
  "short_name": "Faceit Tracker",
  "description": "Track your Faceit CS2 friends' ELO, matches, and live games",
  "version": "2.0.0",
  "manifest_version": 3,
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#f97316",
  "background_color": "#0f172a",
  "categories": ["games", "entertainment", "social"],
  "lang": "en",
  "icons": [
    {
      "src": "/faceit-icons/faceit_icon.png",
      "sizes": "48x48",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/faceit-icons/faceit_icon.png", 
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/faceit-icons/faceit_icon.png",
      "sizes": "96x96", 
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/faceit-icons/faceit_icon.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/faceit-icons/faceit_icon.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/faceit-icons/faceit_icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/faceit-icons/img_detalii_match.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Friends dashboard with live match tracking"
    }
  ],
  "shortcuts": [
    {
      "name": "View Friends",
      "short_name": "Friends",
      "description": "View your Faceit friends list",
      "url": "/?tab=friends",
      "icons": [
        {
          "src": "/faceit-icons/faceit_icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Leaderboard", 
      "short_name": "Leaderboard",
      "description": "View regional leaderboards",
      "url": "/?tab=leaderboard",
      "icons": [
        {
          "src": "/faceit-icons/faceit_icon.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false
}